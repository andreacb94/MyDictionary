<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.andrea.mydictionary.InputActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salva"
        android:id="@+id/buttonSalva"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Parola"
        android:id="@+id/textViewTesto1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/editTextParola"
        android:hint="Inserisci"
        android:textSize="20dp"
        android:editable="true"
        android:layout_below="@+id/textViewTesto1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textViewTesto1"
        android:layout_alignEnd="@+id/textViewTesto1"
        android:gravity="top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Significato"
        android:id="@+id/textViewTesto2"
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editTextParola"
        android:layout_alignEnd="@+id/editTextParola"
        android:layout_below="@+id/editTextParola"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/editTextSignificato"
        android:hint="Inserisci"
        android:textSize="20dp"
        android:editable="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewTesto2"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/editTextParola"
        android:layout_alignEnd="@+id/editTextParola"
        android:layout_above="@+id/buttonSalva"
        android:gravity="top" />

</RelativeLayout>
